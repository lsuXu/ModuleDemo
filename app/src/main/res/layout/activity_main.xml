<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xu.test.moduledemo.MainActivity">


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/moduleGroupLineraLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/mysqlDbBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mysql数据库连接测试" />

        <Button
            android:id="@+id/sqliteDbBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sqlite数据库测试" />

        <Button
            android:id="@+id/rxTestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RXTest" />
        <Button
            android:id="@+id/compressCaseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压缩文件测试" />
        <Button
            android:id="@+id/faceRecognitionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸识别测试" />
        <Button
            android:id="@+id/webViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView测试"/>
        <Button
            android:id="@+id/alarmManageTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alarmManageTest测试"/>
        <Button
            android:id="@+id/normalCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常规验证"/>
        <Button
            android:id="@+id/linuxCommandBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="linux命令测试"/>
        <Button
            android:id="@+id/openCvFaceComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对比人脸"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
